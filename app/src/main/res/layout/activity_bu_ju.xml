<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    app:layout_constraintHorizontal_chainStyle="spread"
    android:layout_height="match_parent"
    tools:context=".bujuTest.BuJuActivity"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:background="@color/white">

    <LinearLayout
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/ly_content"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"></LinearLayout>


    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tv2"
        app:layout_constraintTop_toTopOf="parent"
        android:lines="1"
        android:ellipsize="end"
        android:text="####"/>
    <TextView
        android:id="@+id/tv2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/tv1"
        app:layout_constraintRight_toLeftOf="@id/tv3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_default="wrap"
        android:ellipsize="end"
        android:lines="1"
        android:text="dsssssssssssssssssssssssssssssssssssssssdddddddddddddddddddddddssssssssssssssss"/>
    <TextView
        android:id="@+id/tv3"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/tv2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="#"/>


    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="#f00">
        <ImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:background="#78c5f2"
            android:layout_height="wrap_content" />
    </FrameLayout>


    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp">
        <TextView
            android:id="@+id/text2"
            android:text="aaaaaaaaa"
            android:textColor="#000"
            android:includeFontPadding="false"
            android:gravity="center"
            android:textSize="9dp"
            android:layout_width="wrap_content"
            android:layout_height="30dp" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/ly_test_width"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:background="@color/black"
        android:layout_height="wrap_content"></LinearLayout>






</androidx.constraintlayout.widget.ConstraintLayout>