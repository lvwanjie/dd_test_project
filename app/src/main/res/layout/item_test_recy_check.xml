<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textColor="#141414"
        android:textStyle="bold"
        android:layout_marginLeft="9dp"
        android:text="自提点"
        android:layout_marginTop="20dp"/>

    <RelativeLayout
        android:id="@+id/rl_self_pick_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="9dp"
        android:paddingTop="14dp"
        android:paddingBottom="14dp">

        <TextView
            android:id="@+id/etv_check_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="19dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:text="未选中"
            android:textColor="#d5d5d5"
            />

        <TextView
            android:id="@+id/tv_self_pick_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:layout_toRightOf="@id/etv_check_box"
            android:textColor="#353535"
            android:textSize="15dp"
            android:layout_marginRight="55dp"
            android:lines="1"
            android:ellipsize="end"
            android:text="锦怡家园5号楼景豪超市锦怡家园5号楼景豪超市" />

        <TextView
            android:id="@+id/tv_self_pick_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_self_pick_name"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@id/etv_check_box"
            android:textSize="12dp"
            android:layout_marginRight="55dp"
            android:text="北京市丰台区方庄南路12号底商北京市丰台区方庄南路12号底商北京市丰台区方庄南路12号底商哈哈哈哈哈0101001010" />


        <TextView
            android:id="@+id/tv_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:text="0.2km"
            android:textSize="11dp" />
    </RelativeLayout>


</LinearLayout>